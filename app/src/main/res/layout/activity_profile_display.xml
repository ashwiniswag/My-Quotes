<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDisplay"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#91ACE4">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:padding="5dp"
        app:cardCornerRadius="5000dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#042FB8">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:padding="5dp"
        app:cardCornerRadius="5000dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FDFCFC">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="15dp"
        android:id="@+id/dp"
        android:layout_gravity="center"
        android:requiresFadingEdge="vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_circle_black_24dp"/>

    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Here To Add Profile Photo:"
        android:id="@+id/dpset"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usname"
            android:textSize="20dp"
            android:text="Ashwini Pal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Penname:"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pename"
            android:textSize="20dp"
            android:text="Safir"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gen"
            android:textSize="20dp"
            android:text="Gay"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:textSize="20dp"
            android:text="Aaji aab ye bhi dede"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mycontri"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="My COntribution"
        android:background="#E13ECCAB"/>

</LinearLayout>